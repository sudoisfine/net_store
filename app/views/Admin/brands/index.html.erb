<p id="notice"><%= notice %></p>

<h1>Service Providers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |admin_brand| %>
      <tr>
        <td><%= admin_brand.name %></td>
        <td><%= link_to (fa_icon "eye"), admin_brand_path(admin_brand) %></td>
        <td><%= link_to (fa_icon "pencil-square-o"), edit_admin_brand_path(admin_brand) %></td>
        <td><%= link_to (fa_icon "trash-o"), admin_brand_path(admin_brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_admin_brand_path, class: 'btn btn-large btn-info' %>
