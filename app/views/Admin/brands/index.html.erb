<p id="notice"><%= notice %></p>

<h1>Listing Brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |admin_brand| %>
      <tr>
        <td><%= admin_brand.name %></td>
        <td><%= link_to 'Show', admin_brand %></td>
        <td><%= link_to 'Edit', edit_admin_brand_path(admin_brand) %></td>
        <td><%= link_to 'Destroy', admin_brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_admin_brand_path %>
