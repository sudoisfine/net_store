<p id="notice"><%= notice %></p>

<h1>Product Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |admin_category| %>
      <tr>
        <td><%= admin_category.name %></td>
        <td><%= link_to (fa_icon "eye"), admin_category_path(admin_category) %></td>
        <td><%= link_to (fa_icon "pencil-square-o"), edit_admin_category_path(admin_category) %></td>
        <td><%= link_to (fa_icon "trash-o"), admin_category_path(admin_category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-large btn-info' %>
