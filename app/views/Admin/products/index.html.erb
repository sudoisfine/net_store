<p id="notice"><%= notice %></p>

<h1>Products for Sale</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Main Photo</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |admin_product| %>
      <tr>
        <td><%= image_tag admin_product.avatar.url (:thumb) %></td>
        <td><%= admin_product.name %></td>
        <td><%= admin_product.price %></td>
        <td><%= admin_product.quantity %></td>
        <td><%= admin_product.description %></td>
        <td><%= admin_product.brand.try(:name) %></td>
        <td><%= admin_product.category.try(:name) %></td>
        <td><%= link_to (fa_icon "eye"), admin_product_path(admin_product) %></td>
        <td><%= link_to (fa_icon "pencil-square-o"), edit_admin_product_path(admin_product) %></td>
        <td><%= link_to (fa_icon "trash-o"), admin_product_path(admin_product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-large btn-info' %>
